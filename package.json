{
  "name": "security-analizer",
  "version": "1.0.0",
  "description": "Security analyzation app.",
  "author": "Dima Bogdan, Ilya Kisel",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron .",
    "pack-mac": "electron-builder -m --dir",
    "dist-mac": "electron-builder -m",
    "pack-win": "electron-builder -w --dir",
    "dist-win": "electron-builder -w",
    "pack": "electron-builder -mw --dir",
    "dist": "electron-builder -mw"
  },
  "build": {
    "appId": "security-analizer",
    "artifactName": "security-analizer",
    "files": [
      "dist/main.js",
      "dist/preload.js"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "portable"
    }
  },
  "devDependencies": {
    "@types/electron-localshortcut": "^3.1.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "electron": "^13.6.6",
    "electron-builder": "^22.3.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.7.5"
  },
  "dependencies": {
    "@types/electron-localshortcut": "^3.1.0",
    "electron-localshortcut": "^3.2.1"
  }
}
